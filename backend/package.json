{
  "name": "abrechnung-backend",
  "version": "1.2.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "axios": "^1.7.2",
    "body-parser": "^1.20.2",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "cron": "^3.1.7",
    "ejs": "^3.1.10",
    "express": "^5.0.0-beta.3",
    "express-session": "^1.18.0",
    "i18next": "^23.11.5",
    "mongoose": "^8.5.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-ldapauth": "^3.0.1",
    "passport-magic-login": "^1.2.2",
    "passport-microsoft": "^2.1.0",
    "pdf-fontkit": "^1.8.9",
    "pdf-lib": "^1.17.1",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.3.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.10",
    "@types/nodemailer": "^6.4.15",
    "@types/passport": "^1.0.16",
    "@types/passport-microsoft": "^1.0.3",
    "@types/supertest": "^2.0.16",
    "@types/swagger-ui-express": "^4.1.6",
    "ava": "^5.3.1",
    "nodemon": "^3.1.4",
    "supertest": "^6.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "scripts": {
    "dev": "nodemon --ext ts,js,json,ejs,tsv --watch './**/*' --watch '../common/**/*' --ignore './dist/**/*' --ignore '../common/forms/*' --exec 'yarn run tsoa spec-and-routes &&  npx tsc && node dist/app/server.js'",
    "build": "tsoa spec-and-routes && tsc",
    "start": "node dist/build/server.js",
    "test": "npm run test:$NODE_ENV",
    "test:production": "npm run build && ava --serial --timeout=1m dist/build/tests/**/* ",
    "test:development": "npm run build && ava --serial --timeout=1m dist/app/tests/**/* ",
    "parse-lumpsums": "npm run parse-lumpsums:$NODE_ENV",
    "parse-lumpsums:production": "npm run build && node dist/build/data/run-parser.js",
    "parse-lumpsums:development": "npm run build && node dist/app/data/run-parser.js"
  }
}
